<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/list_item_card_view"
    android:layout_height="75dp"
    android:layout_gravity="center"
    card_view:cardCornerRadius="10dp"
    card_view:cardBackgroundColor="@color/list_item_color"
    card_view:cardElevation="10dp"
    android:layout_margin="8dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_activated">

    <TextView
        android:id="@+id/list_item_area"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:padding="@dimen/activity_horizontal_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/ListItemArea"
        android:textColor="@color/fbutton_color_alizarin"
        android:text="20 m2"/>



    <TextView
        android:id="@+id/list_item_title_string"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:text="3000 na 4000"
        style="@style/ListItemTitle"
        />

    <TextView

        android:id="@+id/list_item_sizes_string"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:paddingTop="4dp"
        android:layout_below="@+id/list_item_title_string"
        android:text="20 m2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        style="@style/NormalTextSize"
        android:textColor="@color/fbutton_color_belize_hole"/>
</RelativeLayout>

</android.support.v7.widget.CardView>
